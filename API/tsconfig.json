{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./dist/src",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "strict": true,
    "target": "es5",
    // opcionais, mas recomendados
    // quase um "ESLint" b√°sico
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true
  }
}
